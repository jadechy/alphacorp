{% extends 'admin/base_admin.html.twig' %}

{% import 'macro/forum/response.html.twig' as macros %}

{% block admin_title %}
	{{category.name}}
{% endblock %}
{% set return_path = 'admin_category_homepage' %}

{% block admin_content %}
	<section>
		<div class="wrapper-table">

			<table>
				<thead>
					<tr>
						<th>Cat√©gorie</th>
						<th>Valeur</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>Id</td>
						<td>{{category.id}}</td>
					</tr>
					<tr>
						<td>Name</td>
						<td>{{category.name}}</td>
					</tr>
					<tr>
						<td>Label</td>
						<td>{{category.label}}</td>
					</tr>
					<tr>
						<td>Topics</td>
						<td>
							{% for topic in category.topics %}
								<a href={{path("admin_topic_show", {id: topic.id} )}} class="badge">
									{{topic.id}}
									{{topic.title}}
									{{ ux_icon('tabler:arrow-bar-right', {class: 'w-6 h-6'}) }}
								</a>
							{% endfor %}

						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="flex justify-center items-center mb-4">
			<a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn">
				Modifier
			</a>
		</div>
		{{ include('admin/category/_delete_form.html.twig') }}
	</section>
{% endblock %}
