{% extends 'admin/base_admin.html.twig' %}

{% block title %}Quiz
{% endblock %}

{% block admin_content %}
	<div class="wrapper-table">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Description</th>
					<th>Auteur</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for quiz in quizzes %}
					<tr>
						<td>{{ quiz.id }}</td>
						<td>{{ quiz.title }}</td>
						<td>{{ quiz.description }}</td>
						<td>{{ quiz.author.username }}</td>
						<td>
							<a href="{{ path('admin_quiz_show', {'id': quiz.id}) }}">
								{{ ux_icon('tabler:eye', {class: 'w-6 h-6'}) }}
							</a>
							<a href="{{ path('admin_quiz_edit', {'id': quiz.id}) }}">
								{{ ux_icon('tabler:edit', {class: 'w-6 h-6'}) }}
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="w-fit mx-auto">
		<a href="{{ path('admin_quiz_new') }}" class=" btn">Cr√©er un nouveau quiz</a>
	</div>
{% endblock %}
