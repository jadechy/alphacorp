{% extends 'admin/base_admin.html.twig' %}

{% block title %}Quiz
{% endblock %}

{% block admin_content %}
	<section>
		<table>
			<thead>
				<tr>
					<th>Cat√©gorie</th>
					<th>Valeur</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Id</td>
					<td>{{ quiz.id }}</td>
				</tr>
				<tr>
					<td>Title</td>
					<td>{{ quiz.title }}</td>
				</tr>
				<tr>
					<td>Description</td>
					<td>{{ quiz.description }}</td>
				</tr>
				<tr>
					<td>Auteur</td>
					<td>{{ quiz.author.username }}</td>
				</tr>
				<tr>
					<td>Question</td>
					<td>
						{% for question in quiz.questions %}
							<a href={{path("admin_question_show", {id: question.id} )}}>
								{{ question.id }}
								-
								{{ question.content }}
							</a>

						{% endfor %}
					</td>

				</tr>


			</tbody>
		</table>

		<div class="flex justify-center items-center gap-8">
			<a href="{{ path('admin_quiz_edit', {'id': quiz.id}) }}">
				Modifier
			</a>
			{{ include('admin/quiz/_delete_form.html.twig') }}
		</div>
	</section>
{% endblock %}
