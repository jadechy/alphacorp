{% extends 'admin/base_admin.html.twig' %}

{% import 'macro/response.html.twig' as macros %}

{% block admin_title %}{{topic.title}}{% endblock %} 
 {% set return_path = 'admin_topic_home' %} 

{% block admin_content %}
         <section> 

    <table>
        <thead>
            <tr>
                <th>Catégorie</th>
                <th>Valeur</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Id</td>
                <td>{{topic.id}}</td>
            </tr>
            <tr>
                <td>Created</td>
                <td>{{topic.createdAt|format_datetime('short', 'none', locale: 'fr')}}</td>
            </tr>
            <tr>
                <td>Title</td>
                <td>{{topic.title}}</td>
            </tr>
            <tr>
                <td>Short description</td>
                <td>{{topic.shortDescription}}</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>{{topic.longDescription}}</td>
            </tr>
            <tr>
                <td>Auteur id</td>
                <td>{{topic.author.id}}</td>
            </tr>
            <tr>
                <td>Status</td>
                <td>{{topic.status.value}}</td>
            </tr>
            <tr>
                <td>Catégorie</td>
                <td>{{topic.category.name}}</td>
            </tr>
            <tr>
                <td>Langue</td>
                <td>{{topic.language.name}}</td>
            </tr>
            <tr>
                <td>Réponses</td>
                <td>
                    {% for response in topic.responses %}
                        <div>
                            {{response.id}}
                            {{response.content}}
                        </div>
                    {% endfor %}

                </td>
            </tr>
            
        </tbody>
    </table>
<div class="flex justify-center items-center gap-8">
    <a href="{{ path('admin_topic_edit', {'id': topic.id}) }}" class="btn">
        Modifier
    </a>
                 {{ include('admin/user/_delete_form.html.twig') }} 
</div>
        </section>
 {% endblock %}
