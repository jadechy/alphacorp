{% extends 'admin/base_admin.html.twig' %}

{% block admin_title %}Catégories{% endblock %}
 

{% block body %}
 
    <table>
        <thead>
            <tr  >
                <th scope="col" > ID</th>
                <th scope="col" > Nom</th>
                <th scope="col" > Label</th>
                <th scope="col" > Actions</th>
            </tr>
        </thead>
        <tbody >
            {% for category in categories %} 
            <tr>
                    <td >{{ category.id }}</td>
                    <td >{{ category.name }}</td>
                    <td >{{ category.label }}</td>
                    <td >
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" >
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" >
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                            </svg>
                        </a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" >
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" >
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                            </svg>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune catégorie trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_category_new') }}" class="btn">
        Créer une nouvelle catégorie
    </a>
 {% endblock %}
