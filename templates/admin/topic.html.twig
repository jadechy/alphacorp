{% extends 'base.html.twig' %}

{% block title %}Administration des topics{% endblock %}

{% block body %}
  
        
        <div class="mt-5 flex gap-4">
            <div class="relative">
                <select class="dashboard-select" id="langue">
                    <option value="all">Filtrer par langue</option>
                    {% for language in languages %}    
                        <option value="{{language.code}}">{{language.name}}</option>
                    {% endfor %}
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
            <div class="relative">
                <select class="dashboard-select" id="category">
                    <option value="all">Filtrer par catégorie</option>
                    {% for category in categories %}    
                        <option value="{{category.name}}">{{category.label}}</option>
                    {% endfor %}
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
            <div class="relative">
                <select class="dashboard-select" id="status">
                    <option value="all">Filtrer par status</option>
                    {% for status in statuses %}    
                        <option value="{{status.name}}">
                            {% if status.value == 'open' %}
                                Ouvert
                            {% elseif status.value == 'close' %}
                                Fermé
                            {% elseif status.value == 'waiting' %}
                                En attente
                            {% endif %}
                        </option>
                    {% endfor %}
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
        </div>

        <section class="mt-9">
            <div >
                <table  >
                    <thead>
                        <tr  >
                            <th scope="col"> ID</th>
                            <th scope="col"> Titre</th>
                            <th scope="col"> Courte description</th>
                            

                            <th scope="col"> Auteur</th>
                            <th scope="col"> Catégorie</th>
                            <th scope="col"> Langue</th>

                            <th scope="col"> Status</th>

                            <th scope="col"> Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-300 ">
                        {% for topic in topics %}
                            <tr  data-langue="{{topic.language.code}}" data-category="{{topic.category.name}}" data-status="{{topic.status.name}}">
                                <td >{{ topic.id }}</td>
                                <td >{{ topic.title}}</td>
                                <td >{{ topic.shortDescription }}</td>
                                
                                <td >{{ topic.author.username }}</td>
                                <td >{{ topic.category.name }}</td>
                                <td >{{ topic.language.name }}</td>

                                <td >
                                    <form method="POST" action="{{ path('topic_change_status', { id: topic.id }) }}" class="inline">
                                        <input type="hidden" name="status" value="{{ topic.status.value }}">

                                        <div class="relative">
                                            <select name="status" class="block appearance-none w-full bg-gray-100 text-gray-800 border border-gray-300 rounded-full py-2 px-4 pr-8 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" onchange="this.form.submit()">
                                                <option value="open" {% if topic.status.value == 'open' %}selected{% endif %}>Ouvert</option>
                                                <option value="close" {% if topic.status.value == 'close' %}selected{% endif %}>Fermé</option>
                                                <option value="waiting" {% if topic.status.value == 'waiting' %}selected{% endif %}>En attente</option>
                                            </select>

                                            <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                                </svg>
                                            </div>
                                        </div>
                                    </form>
                                </td>


                                <td >
                                    <a href="{{ path('app_topic', {'id': topic.id}) }}"  >
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"  >
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun topic trouvé.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
 {% endblock %}
{% block javascripts %}
    {{ parent() }}   
    <script src="{{ asset('js/filterTopics.js') }}"></script>
{% endblock %}

