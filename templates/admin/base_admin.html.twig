{% extends 'base.html.twig' %}
{% set admin_title = block('admin_title') %}
{% block admin_title %}{% endblock %}

{% block title %}
	Dashboard -
	{{admin_title}}
{% endblock %}
{% block admin_nav %}
	<nav class=" bg-neutral-950 p-6 flex gap-10 rounded justify-center flex-wrap">
		{% for item in data %}
			<a href="{{ path(item.path) }}" class="hover:text-fuchsia-500 text-center flex flex-col items-center">
				{{ ux_icon('tabler:' ~ item.icon, {class: 'w-6 h-6'}) }}
				<p class="capitalize font-medium text-sm truncate">{{ item.label }}</p>
			</a>
		{% endfor %}
	</nav>

{% endblock %}
{% set data = [
    {
        label: 'Users',
        path: 'admin_user_homepage', 
        icon :"user",
    },
    {
        label: 'Topics',
