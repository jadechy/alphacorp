{% extends 'admin/base_admin.html.twig' %}

{% block admin_title %}Admin
{% endblock %}
{% set data = [
    {
        label: 'Users',
        path: 'admin_user_homepage', 
        icon :"user",
    },
    {
        label: 'Topics',
        path: 'admin_topic_homepage', 
        icon :"book",
    },
    {
        label: 'Réponses',
        path: 'admin_response_homepage', 
        icon :"message-circle",
    },
    {
        label: 'Catégories',
        path: 'admin_category_homepage',         
        icon :"folder",
    },
    {
        label: 'Langue',
        path: 'admin_language_homepage',      
        icon :"flag",
    },
    {
        label: 'Débannissement',
        path: 'admin_banrequest', 
        icon :"user-x",
    },
    {
        label: 'Évènement',
        path: 'admin_event_homepage', 
        icon :"calendar-filled",
    },
    {
        label: 'Quiz',
        path: 'admin_quiz_homepage', 
        icon :"clipboard-text",
    },
    {
        label: 'Rank',
        path: 'admin_rank_homepage', 
        icon :"award",
    },
 ] 
 %}
{% block admin_content %}
	<section class="grid grid-cols-1 gap-y-5 sm:grid-cols-3 lg:grid-cols-4  gap-x-5">
		{% for item in data %}
			<a href="{{ path(item.path) }}" class="relative flex flex-col items-center justify-center rounded-xl overflow-hidden aspect-square border hover:scale-105 cursor-pointer transition hover:bg-neutral-700">
				{{ ux_icon('tabler:' ~ item.icon, {class: 'w-17 h-17 mb-4'}) }}
				<p class="capitalize font-medium text-2xl truncate">{{ item.label }}</p>
			</a>
		{% endfor %}
	</section>
{% endblock %}
