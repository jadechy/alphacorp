<section class="mt-20 ">
	<h2 class="text-xl font-semibold">La participation aux events
		<span class="text-sm text-neutral-400">-
			{{ user.events|length }}</span>
	</h2>
	<div class="flex gap-8 pt-8">
		{% for event in user.events|slice(0, 4) %}

			<a href={{path("app_event_show", {id: event.id} )}} class=" w-60">
				{% include "parts/components/card_col.html.twig" with  {"title": event.title, "height": 40, img : event.image} %}

			</a>
		{% else %}
			<p>Aucune participation trouvée.</p>
		{% endfor %}
		{% if user.events|length > 4 %}
			<a href={{path(path_event_participate)}} class="w-40 border border-neutral-300 rounded-md p-3 flex items-center hover:scale-105 transition font-bold text-center">
				<p>Voir tous les évènements participé</p>
			</a>
		{% endif %}
	</div>
</section>
