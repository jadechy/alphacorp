		<!-- Section Profil -->
		<section class="flex gap-6 w-full">
			<img src="{{ asset('img/1.png') }}" class="w-80 object-cover rounded-sm" alt="Profile Picture"/>
			{{ form_start(form, {'attr': {'class': 'flex flex-col justify-between gap-8 w-full'}}) }}
