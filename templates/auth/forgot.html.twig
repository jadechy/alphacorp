{% extends "base.html.twig" %}
{% block title %}Mot de passe perdu
{% endblock %}
{% block h1 %}Mot de passe perdu ?
{% endblock %}
{% block body %}
	<section>
		{% for message in app.flashes('error') %}
			<div class="flex justify-center">
				<div class="border border-red-500 text-red-500 p-4 rounded w-fit mb-8">{{message}}</div>
			</div>
			<div>
			{% endfor %}

			{% for message in app.flashes('success') %}
				<div class="bg-red-500 text-white p-4 rounded">{{ message }}</div>
			{% endfor %}


			<div class="w-xl mx-auto">
				<p class="mb-4">Vous recevez un email pour réinitialiser votre mot de passe</p>
				<form method="POST" action="{{ path('app_forgot') }}">
					<div>
						<input id="email" name="_email" type="email" placeholder="Adresse Email" / class="form-control  px-8 py-4 w-full  rounded-lg font-medium bg-transparent border border-gray-200 placeholder-gray-400 text-sm focus:outline-none focus:border-fuchsia-300">
					</div>
					<div class="flex justify-end">
						<button type="submit" class="flex items-center text-fuchsia-300 rounded-full border border-fuchsia-300 px-4 py-2   hover:bg-fuchsia-400 hover:text-white transition my-8">
							<svg class="h-5 w-5 fill-current mr-2" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
								<title>email-arrow-right</title><path d="M13 19C13 15.69 15.69 13 19 13C20.1 13 21.12 13.3 22 13.81V6C22 4.89 21.1 4 20 4H4C2.89 4 2 4.89 2 6V18C2 19.11 2.9 20 4 20H13.09C13.04 19.67 13 19.34 13 19M4 8V6L12 11L20 6V8L12 13L4 8M20 22V20H16V18H20V16L23 19L20 22Z"/></svg>
							Recevoir l'email de réinitialisation
						</button>
					</div>
					<div class="w-full flex justify-center">
						<a href="{{ path('app_login')}}" class="text-center text-sm text-gray-400 w-full mt-3 hover:underline hover:decoration-solid">
							Vous vous souvenez de votre mot de passe ? Connectez-vous
						</a>
					</div>
				</form>
			</div>
		</div>
	</section>
{% endblock %}
