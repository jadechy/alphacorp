{% macro AfficheContestCard(contest) %}
	<div class="shadow shadow-neutral-900 p-5 flex flex-col justify-between h-45 hover:scale-110 transition rounded-md">
		<div>
			{% if contest.isInFuture() %}
				<span class="py-1.5 px-2.5 bg-green-500/30 rounded-full flex w-20 justify-center items-center gap-1">
					<p class="font-medium text-xs ">Ouvert</p>
				</span>
			{% elseif contest.isFinished() %}
				<span class="py-1.5 px-2.5 bg-red-500/30 rounded-full flex w-20 justify-center items-center gap-1">
					<p class="font-medium text-xs ">Fermé</p>
				</span>
			{% elseif contest.isOngoing() %}
				<span class="py-1.5 px-2.5 bg-orange-500/30 rounded-full flex w-20 justify-center items-center gap-1">
					<p class="font-medium text-xs ">En cours</p>
				</span>
			{% endif %}
		</div>

		<div>
			<h2 class="text-2xl text-fuchsia-300 font-bold">{{contest.title}}
			</h2>

			<p class="italic">
				Par
				{{contest.author.username}}
			</p>
		</div>

		{% if contest.isInFuture() and not app.user.hasAnsweredContest(contest) and not is_granted("ROLE_SUPERVISOR") %}
            <a href={{ path('app_contest_single', {id: contest.id} ) }} class="btn mx-auto">Participer au défi</a>
        {% elseif app.user.hasAnsweredContest(contest) and not is_granted("ROLE_SUPERVISOR") %}
			<a href={{ path('app_contest_single', {id: contest.id} ) }} class="btn-secondary mx-auto">Voir le résultat</a>
        {% endif %}
	</div>
{% endmacro %}
