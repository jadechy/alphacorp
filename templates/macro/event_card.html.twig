{% macro AfficheEventCard(event) %}
	<a class="flex gap-6 rounded-lg w-full shadow-md shadow-neutral-900 hover:scale-110 hover:bg-neutral-700 transition overflow-hidden" href={{ path('app_event_show', { id : event.id } ) }}>
		<img
		src={{ asset('img/1.png') }} alt="Event Image" class="w-80 object-cover"/>
		{# <img src={{ asset(event.image) }} alt="Event Image" class="w-80 object-cover"/> #}
		<div class="p-6 w-full">
			<div class="flex justify-between items-center">
				<h2 class="text-lg">
					{{event.title}}
				</h2>
				{% if event.isInFuture() %}
					<span class="py-1.5 px-2.5 bg-green-500/30 rounded-full flex w-20 justify-center items-center gap-1">
						<p class="font-medium text-xs text-green-600">Ouvert</p>
					</span>
				{% elseif event.isFinished() %}
					<span class="py-1.5 px-2.5 bg-red-500/30 rounded-full flex w-20 justify-center items-center gap-1">
						<p class="font-medium text-xs text-red-600">Fermé</p>
					</span>
				{% elseif event.isOngoing() %}
					<span class="py-1.5 px-2.5 bg-orange-500/30 rounded-full flex w-20 justify-center items-center gap-1">
						<p class="font-medium text-xs text-orange-600">En cours</p>
					</span>
				{% endif %}
			</div>
			<div class="flex gap-5 text-sm text-neutral-400 mb-4">
				<p>
					{{event.location}}
				</p>


				<p>{{ event.startAt|format_datetime('short', 'none', locale: 'fr') }}
					-
					{{ event.endAt|format_datetime('short', 'none', locale: 'fr') }}
				</p>

			</div>

			<p>{{event.shortDescription}}</p>

			<div class="flex justify-end gap-5 items-end">

				<p class="text-neutral-300 align-bottom">{{ event.participants|length }}
					participants
				</p>
				{% if event.isInFuture() and not event.isUserParticipating(app.user) %}
					<p class="btn-secondary">
						Participer à l'event
					</p>
				{% endif %}
			</div>
		</div>
	</a>
{% endmacro %}
