{% extends 'base.html.twig' %}

{% block title %}Tous les évènements{% endblock %}

{% import 'macro/event_card.html.twig' as macros %}

{% block body %}
<main class="flex-1 py-10 px-5 sm:px-10">    
        <section>
            <div class="flex items-center justify-between">
                <span class="font-semibold text-gray-700 text-base">Tous les évènements</span>
            </div>

            <div class="mt-4 grid grid-cols-2 gap-y-5 sm:grid-cols-3 gap-x-5">
                {% for event in events %}
                    {{ macros.AfficheEventCard(event) }}
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
