{% extends 'base.html.twig' %}

{% block title %}Academy index{% endblock %}

{% block body %}
    <h1>Academy index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Courte description</th>
                <th>Gratuit</th>
                <th>Prix</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for academy in academies %}
            <tr>
                <td>{{ academy.id }}</td>
                <td>{{ academy.title }}</td>
                <td>{{ academy.shortDescription }}</td>
                <td>{{ academy.free ? 'Yes' : 'No' }}</td>
                <td>{{ academy.price }}</td>
                <td>{{ academy.createdAt ? academy.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_supervisor_academy_show', {'id': academy.id}) }}">show</a>
                    <a href="{{ path('app_supervisor_academy_edit', {'id': academy.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune formations trouvées.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_supervisor_academy_new') }}">Créer une nouvelle formation</a>
{% endblock %}
