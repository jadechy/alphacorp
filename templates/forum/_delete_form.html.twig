<form method="post" action={{ path('app_forum_delete', {id: topic.id} ) }} class="w-fit mx-auto" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ topic.id) }}">
	<button type="submit" class="btn-delete">
		Supprimer
	</button>
</form>
